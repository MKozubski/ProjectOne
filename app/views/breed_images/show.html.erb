<h1>Search Dog Images by Breed</h1>

<%= form_tag search_breed_images_path, method: :get do %>
  <%= label_tag :breed_name, 'Enter Breed Name:' %>
  <%= text_field_tag :breed_name, params[:breed_name] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @breed_images.any? %>
  <% @breed_images.each do |image| %>
    <%= image_tag image.url %>
    <p>Breed: <%= image.breed.name %></p>
  <% end %>
<%= paginate @breed_images %>

 <p><%= link_to "Back to Breed", @breed_images.first.breed %></p>
  <p><%= link_to "Sub-Breeds", breed_sub_breeds_path(@breed_images.first.breed) %></p>
<% else %>

<% else %>
  <p>No images available for this breed.</p>
<% end %>
