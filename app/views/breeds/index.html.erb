<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% @breeds.each do |breed| %>
        <div class="card mb-3">
          <div class="card-body">
            <h1 class="card-title"><%= breed.name.capitalize %></h1>
            <ul class="list-group">
              <% breed.sub_breeds.each do |sub_breed| %>
                <li class="list-group-item"><%= sub_breed.name.capitalize %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container text-center">
  <%= paginate @breeds %>
</div>
